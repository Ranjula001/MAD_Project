<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentGate">

    <Button
        android:id="@+id/paynow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="106dp"
        android:backgroundTint="#FFD80C"
        android:foregroundTint="#000000"
        android:text="PAY NOW"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#FFD80C"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="XXX"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:shadowColor="#FFD80C"
        android:textColor="#3F6EB5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="534dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Card Holder"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/holder"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="460dp"
        android:backgroundTint="#FFD80C"
        android:backgroundTintMode="src_in"
        android:hint="Eg: I.M.D.J.R.B. Ilukpitiya"
        android:minHeight="48dp"
        android:shadowColor="#FFD80C"
        android:textColor="#3F6EB5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="393dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Card Number"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cardNumber"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="312dp"
        android:backgroundTint="#FFD80C"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="XXXX-XXXX-XXXX-XXXX"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:shadowColor="#FFD80C"
        android:textColor="#3F6EB5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="229dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="CVV Number"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="230dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Expiry Date"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/expdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="253dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#FFD80C"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="MM/yy"
        android:inputType="date"
        android:minHeight="48dp"
        android:shadowColor="#FFD80C"
        android:textColor="#3F6EB5" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/payProg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="40dp"
        android:background="#00FFEB3B"
        android:backgroundTint="#FFC107" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="355dp"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="574dp"
        app:srcCompat="@drawable/visa_mastercard_logo" />


</RelativeLayout>